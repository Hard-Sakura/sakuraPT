<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sakura.tables.dao.IHelloWorldMapper">

  <resultMap id="BaseResultMap" type="com.sakura.tables.entity.HelloWorldEntity">
    <id column="ID" jdbcType="VARCHAR" property="id" />
    <result column="USER_NAME" jdbcType="VARCHAR" property="userName" />
    <result column="USER_PASSWORD" jdbcType="VARCHAR" property="userPassword" />
    <result column="CREATE_DATE" jdbcType="DATE" property="createDate" />
    <result column="DATA_STATUS" jdbcType="VARCHAR" property="dataStatus" />
  </resultMap>

  <sql id="Base_Column_List">
    ID,
    USER_NAME,
    USER_PASSWORD,
    CREATE_DATE,
    DATA_STATUS
  </sql>

   <select id="selectByPrimaryKey" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List"/>
    from user_info
    where 1=1
  </select>

  <delete id="deleteByPrimaryKey">
    delete from user_info
    where id = #{id,jdbcType=VARCHAR}
  </delete>

  <insert id="insert">
    insert into user_info (id, user_name, user_password, 
      create_date, data_status)
    values (#{id,jdbcType=VARCHAR}, #{userName,jdbcType=VARCHAR}, #{userPassword,jdbcType=VARCHAR}, 
      #{createDate,jdbcType=DATE}, #{dataStatus,jdbcType=VARCHAR})
  </insert>

  <update id="updateByPrimaryKeySelective">
    update user_info
    <set>
      <if test="userName != null">
        user_name = #{userName,jdbcType=VARCHAR},
      </if>
      <if test="userPassword != null">
        user_password = #{userPassword,jdbcType=VARCHAR},
      </if>
      <if test="createDate != null">
        create_date = #{createDate,jdbcType=DATE},
      </if>
      <if test="dataStatus != null">
        data_status = #{dataStatus,jdbcType=VARCHAR},
      </if>
    </set>
    where id = #{id,jdbcType=VARCHAR}
  </update>
</mapper>